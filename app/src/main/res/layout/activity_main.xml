<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.francini.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff176"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/francini_logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:background="#333330"
            android:shadowColor="#bf360c" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/drinkCup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_local_drink_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/drinkCup"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:shadowColor="#bf360c"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="Cappuccino, Latte, Black, Coffee."
                android:textAlignment="center"
                android:textSize="@dimen/text_font"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#333330" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_location_on_black_24dp" />

            <TextView
                android:id="@+id/buttonMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/location"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:shadowColor="#bf360c"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="14 Aheel Place,Worcester"
                android:textAlignment="center"
                android:textSize="@dimen/text_font"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#333330" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_pets_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pets"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:shadowColor="#bf360c"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="Pets Friendly"
                android:textAlignment="center"
                android:textSize="@dimen/text_font"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#333330" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_wifi_black_24dp" />

            <TextView
                android:id="@+id/text_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/wifi"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:shadowColor="#bf360c"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="FREE WiFi Follow us on:"
                android:textAlignment="center"
                android:textSize="@dimen/text_font"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/fb_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_wifi"
                android:layout_marginLeft="35dp"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:src="@drawable/facebook_social" />

            <ImageView
                android:id="@+id/twitter_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_wifi"
                android:layout_toRightOf="@id/fb_social"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:src="@drawable/twitter_social" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_wifi"
                android:layout_toRightOf="@id/twitter_social"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:src="@drawable/google_soscial" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#333330" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/opening_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_schedule_black" />

            <TextView
                android:id="@+id/time_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/opening_times"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:shadowColor="#ffffff"
                android:shadowDx="15"
                android:shadowDy="15"
                android:shadowRadius="3"
                android:text="Open:Monday-Friday:8am-5pm,Saturday-Sunday:9am-4pm"
                android:textAlignment="center"
                android:textSize="@dimen/text_font"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#333330" />
    </LinearLayout>
</ScrollView>